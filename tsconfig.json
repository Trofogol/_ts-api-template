{
  "compilerOptions": {
    // output options
    "noEmitOnError": true,  // do not update .js files in case of TS errors
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,  // generate .map files
    "outDir": "dist",
    // input options
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
    },
    // allow usage of JS (not TS) modules
    "esModuleInterop": true,
    "allowJs": true,
  },
  "include": ["src/**/*"] // where take files for compilation from
}
